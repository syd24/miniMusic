<swiper>
  <block wx:for="{{swiperImgUrls}}" wx:key="item">
    <swiper-item>
      <image src="{{item.url}}" mode="widthFix" class="itemImg"></image>
    </swiper-item>
  </block>
</swiper>

<view class="playlist-container">
  <block wx:for="{{playlist}}" wx:key="index">
    <d_playlist playlist="{{item}}">
    </d_playlist>
  </block>
</view>